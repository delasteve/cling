{
  "compilerOptions": {
    "declaration": false,
    "lib": [
      "es2017"
    ],
    "module": "commonjs",
    "moduleResolution": "node",
    "noUnusedParameters": true,
    "noUnusedLocals": true,
    "outDir": "./dist",
    "rootDir": ".",
    "sourceMap": true,
    "target": "es2016",
    "typeRoots": [
      "./node_modules/@types/",
      "./typings/"
    ]
  },
  "exclude": [
    "node_modules"
  ]
}
